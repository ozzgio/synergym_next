<div class="min-h-screen pt-16 pb-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="max-w-md mx-auto">
    <!-- Progress indicator -->
    <div class="mb-8">
      <div class="flex items-center justify-center gap-2">
        <div class="flex items-center">
          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-green-600 text-white font-semibold">
            ‚úì
          </div>
          <span class="ml-2 text-sm font-medium text-gray-900">Select Role</span>
        </div>
        <div class="h-1 w-8 bg-green-300"></div>
        <div class="flex items-center">
          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-green-600 text-white font-semibold">
            2
          </div>
          <span class="ml-2 text-sm font-medium text-gray-900">Complete Profile</span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-2 text-center">Complete Your Profile</h2>
      <p class="text-center text-gray-600 mb-6">
        <% if @user.role == "trainer" %>
          Help your students get to know you better
        <% else %>
          Personalize your fitness journey
        <% end %>
      </p>
      
      <% if flash[:alert] %>
        <div class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded-md">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if @user.profile_photo_url.present? %>
        <div class="mb-6 text-center">
          <img src="<%= @user.profile_photo_url %>" alt="Your profile" class="h-24 w-24 rounded-full mx-auto border-4 border-green-200 shadow-md">
        </div>
      <% end %>

      <%= form_with(url: users_oauth_role_selection_path, method: :post, local: true, class: "space-y-5") do |f| %>
        <input type="hidden" name="step" value="profile">
        
        <div class="field">
          <label class="block text-sm font-medium text-gray-700 mb-2">First Name *</label>
          <input type="text"
                 name="user[first_name]"
                 value="<%= @user.first_name %>"
                 placeholder="John"
                 required
                 class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 transition-colors"
                 autocomplete="given-name">
          <% if @user.errors[:first_name].present? %>
            <p class="text-red-600 text-xs mt-1"><%= @user.errors[:first_name].first %></p>
          <% end %>
        </div>
        
        <div class="field">
          <label class="block text-sm font-medium text-gray-700 mb-2">Last Name *</label>
          <input type="text"
                 name="user[last_name]"
                 value="<%= @user.last_name %>"
                 placeholder="Doe"
                 required
                 class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 transition-colors"
                 autocomplete="family-name">
          <% if @user.errors[:last_name].present? %>
            <p class="text-red-600 text-xs mt-1"><%= @user.errors[:last_name].first %></p>
          <% end %>
        </div>

        <div class="field">
          <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
          <input type="email"
                 value="<%= @user.email %>"
                 disabled
                 class="w-full px-4 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600 cursor-not-allowed"
                 autocomplete="email">
          <p class="text-xs text-gray-500 mt-1">Provided by <%= @provider.humanize %></p>
        </div>

        <% if @user.role == "trainer" %>
          <div class="bg-blue-50 border border-blue-200 rounded-md p-4 mt-6">
            <p class="text-sm text-blue-900">
              <strong>Pro tip:</strong> Complete trainers who include a profile photo get 3x more students. Consider uploading one from your <%= @provider.humanize %> account!
            </p>
          </div>
        <% end %>
        
        <div class="actions pt-4">
          <%= f.submit "Complete Setup",
            class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-base font-semibold text-white bg-gradient-to-r from-green-500 to-blue-600 hover:from-green-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 ease-in-out" %>
        </div>
      <% end %>
      
      <div class="mt-6 pt-6 border-t border-gray-200">
        <div class="text-center">
          <button type="button" onclick="history.back()"
            class="text-gray-600 hover:text-gray-700 text-sm font-medium transition duration-150 ease-in-out">
            ‚Üê Go back and change role
          </button>
        </div>
      </div>
    </div>

    <!-- Trust badges -->
    <div class="mt-8 text-center text-xs text-gray-500 space-y-2">
      <p>‚úÖ You're almost done!</p>
      <p>üéØ You can edit your profile anytime</p>
    </div>
  </div>
</div>
